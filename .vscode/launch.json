    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach",
            "program": "${workspaceFolder}/ac_cursive"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'ac_cursive'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ac_cursive",
                    "--package=ac_cursive"
                ],
                "filter": {
                    "name": "ac_cursive",
                    "kind": "bin"
                }
            },
            "env": {
                "TERM": "xterm-256color",
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'ac_cursive'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=ac_cursive",
                    "--package=ac_cursive"
                ],
                "filter": {
                    "name": "ac_cursive",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}